{
  "name": "PeTick",
  "version": "0.1",
  "description": "",
  "manifest_version": 2,
  "browser_action": {
      "default_icon": "images/icon_16.png",
      "default_popup": "pages/popup.html"
  },
  "icons": {
    "16": "images/icon_16.png",
    "128": "images/icon_128.png"
  },
  "content_scripts": [{
    "matches": ["http://dev.afterclassroom.com/robots.txt*"],
      "css": [ "css/main.css" ],
      "js": [
        "js/xhr-helper.js",
        "js/context-core.js"
      ],
	  "run_at": "document_start"
  }],
  "permissions": [
  	  "http://dev.afterclassroom.com/extensions/*",
      "tabs"
  ]
}
